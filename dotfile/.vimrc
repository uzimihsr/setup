set nocompatible
set encoding=utf-8
scriptencoding utf-8
set nobackup
set noswapfile

set title
set number
set ruler
set expandtab
set tabstop=4
set softtabstop=4
set showcmd
set wildmenu

autocmd ColorScheme * highlight LineNr ctermfg=12
highlight CursorLineNr ctermbg=4 ctermfg=0
set cursorline
highlight clear CursorLine

set list
set listchars=tab:>-,eol:↲,extends:»,precedes:«,nbsp:%
